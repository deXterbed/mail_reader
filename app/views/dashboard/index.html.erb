<div class="dashboard-container">
  <div class="dashboard-header">
    <div class="dashboard-header-info">
      <h1 class="dashboard-title">Dashboard</h1>
      <span class="status-tag status-success">Authenticated</span>
    </div>
    <%= button_to 'Refresh Inbox',
      dashboard_path(refresh: true),
      method: :get,
      class: 'button button-primary',
      data: { turbo_frame: 'emails_list' },
      form: { data: { turbo_frame: 'emails_list' }, class: 'button-inline-form' } %>
  </div>

  <% if flash[:alert] %>
    <div class="flash flash-alert"><%= flash[:alert] %></div>
  <% elsif flash[:notice] %>
    <div class="flash flash-notice"><%= flash[:notice] %></div>
  <% end %>

  <%= turbo_frame_tag 'emails_list' do %>
    <%= render partial: 'dashboard/emails_list', locals: { emails: @emails, refresh_message: @refresh_message, error_message: @error_message } %>
  <% end %>
</div>
